@model IEnumerable<GestionEleves.ApplicationWebMVC.Models.ClasseViewModel>

@{
  ViewBag.Title = "Index";
}

<div class="titreClasses">
  <h4 class="titre">Classes</h4>
  <a class="addStudent" href="/Classes/Create">
    <div class="vTrait"></div>
    <div class="hTrait"></div>
  </a>
</div>
<!--
<p class="ajoutClasse">
   Html.ActionLink("Create New", "Create")
</p>-->

<table class="table listeClasses">
  <tr style="color: whitesmoke;">
    <th>
      @Html.DisplayNameFor(model => model.NomEtablissement)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.Niveau)
    </th>
    <th>
    </th>
  </tr>

  @foreach (var item in Model)
  {
    <tr style="color: whitesmoke;">
      <td>
        @Html.DisplayFor(modelItem => item.NomEtablissement)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Niveau)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ClassId }) |
        @Html.ActionLink("Details", "Details", new { id = item.ClassId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ClassId })
      </td>
    </tr>
  }

</table>
