                @Html.ValidationMessageFor(model => model.Appreciation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateNote, htmlAttributes: new { @class = "control-label col-md-2" })
