<UserControl x:Class="GestionEleves.WPFClient.View.DetailEleveUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionEleves.WPFClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="10px" />
        </Style>
    </UserControl.Resources>
    <StackPanel>
        <Label>Nom élève</Label>
        <TextBox Text="{Binding Nom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
        <Label>Prénom élève</Label>
        <TextBox Text="{Binding Prenom, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
    </StackPanel>
</UserControl>
